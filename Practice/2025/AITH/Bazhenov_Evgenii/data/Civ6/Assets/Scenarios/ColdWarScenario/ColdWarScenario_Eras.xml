<GameInfo>
	<StartingGovernments>
		<Update>
			<Where Era="ERA_ATOMIC"/>
			<Set Government="GOVERNMENT_COMMUNISM"/>
		</Update>
	</StartingGovernments>
	
	<!-- 
		- Fewer Rangers because the map is already exposed.  
		- Artillery to allow immediate city state rushing.
		- Replacing field cannons with tanks because they are almost obsolete in the Atomic era.
	-->
	<MajorStartingUnits>
		<Update>
			<Where Era="ERA_ATOMIC" Unit="UNIT_RANGER"/>
			<Set Quantity="1"/>
		</Update>
		<Update>
			<Where Era="ERA_ATOMIC" Unit="UNIT_FIELD_CANNON"/>
			<Set Quantity="0"/>
		</Update>
		<Row Era="ERA_ATOMIC" Unit="UNIT_TANK" Quantity="3" NotStartTile="true"/>
		<Row Era="ERA_ATOMIC" Unit="UNIT_OBSERVATION_BALLOON" Quantity="1" NotStartTile="true"/>
		<Row Era="ERA_ATOMIC" Unit="UNIT_ARTILLERY" Quantity="2"/>
		<Row Era="ERA_ATOMIC" Unit="UNIT_SPY" Quantity="2" OnDistrictCreated="true"/>
	</MajorStartingUnits>
</GameInfo>